<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin-bottom: 70px;
      }

      .footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: #333333;
        padding: 15px 0;
        text-align: center;
      }

      .footerChat {
        font-size: 1.5rem;
        margin-bottom: 10px;
      }

      #chatNowButton {
        width: 150px;
      }

      .card {
        border: none;
        background-color: transparent;
      }

      .card-header {
        background-color: #292929;
        color: #ffffff;
      }

      .game-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .game-card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    <div class="container mt-4">
      <div class="row justify-content-between align-items-center">
        <div class="col-auto">
          <button
            class="btn btn-dark"
            type="button"
            data-bs-toggle="collapse"
            href="#allGamesCollapse"
            aria-expanded="false"
            aria-controls="allGamesCollapse"
          >
            View Games
          </button>
        </div>
        <div class="col-auto">
          <ul class="list-inline text-secondary">
            <li class="list-inline-item fw-medium fs-5">
              Skin Color: <span id="skinColor" class="fw-bold"></span>
            </li>
            <li class="list-inline-item fw-medium fs-5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-coin"
                viewBox="0 0 16 16"
              >
                <!-- SVG content here -->
              </svg>
              <span id="coins" class="text-success fw-bold"></span>
            </li>
            <li class="list-inline-item fw-medium fs-5">
              Current Date:
              <span id="currentDate" class="text-success fw-bold"></span>
            </li>
            <li class="list-inline-item">
              <button type="button" class="btn btn-danger" onclick="logout()">
                Logout
              </button>
            </li>
          </ul>
        </div>
      </div>

      <!-- Collapsible Games Section -->
      <div class="collapse multi-collapse mt-3" id="allGamesCollapse">
        <div class="card border-0 bg-dark text-white shadow-lg">
          <div class="card-header text-center fs-4 bg-dark-subtle">
            All Games
          </div>
          <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              <div class="col">
                <a
                  class="card game-card text-decoration-none bg-gradient bg-primary text-white"
                  target="_blank"
                  href="/game/tictoctoe"
                >
                  <div class="card-body text-center">
                    <h5 class="card-title">Tic Toc Toe</h5>
                    <p class="card-text">Classic tic-tac-toe game.</p>
                  </div>
                </a>
              </div>
              <div class="col">
                <a
                  href="/game/head_rotate"
                  class="card game-card text-decoration-none bg-gradient bg-danger text-white"
                >
                  <div class="card-body text-center">
                    <h5 class="card-title">The Man</h5>
                    <p class="card-text">Rotate the head game.</p>
                  </div>
                </a>
              </div>
              <div class="col">
                <a
                  href="/game/swapcolor"
                  class="card game-card text-decoration-none bg-gradient bg-warning text-dark"
                >
                  <div class="card-body text-center">
                    <h5 class="card-title">Swap Color</h5>
                    <p class="card-text">Fun color swapping game.</p>
                  </div>
                </a>
              </div>
              <div class="col">
                <a
                  href="/game/traffic"
                  class="card game-card text-decoration-none bg-gradient bg-info text-white"
                >
                  <div class="card-body text-center">
                    <h5 class="card-title">Traffic Signal</h5>
                    <p class="card-text">Manage traffic lights.</p>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Section -->
    <div class="footer">
      <p class="footerChat">Chat with us!</p>
      <button class="btn btn-primary" id="chatNowButton" onclick="chatnow()">
        Chat Now
      </button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script>
      function tictactoeFunc() {
        $.ajax({
          method: "GET",
          type: "GET",
          url: "/tictoctoe",
          data: {},
        });
      }
    </script>
  </body>
</html>
